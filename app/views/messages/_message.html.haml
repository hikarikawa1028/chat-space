.main-chat__messages-list__messages
  .main-chat__messages-list__message-box
    .main-chat__messages-list__message-box_tallker
      = current_user.name
    .main-chat__messages-list__message-box__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__messages-list__message-box__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?


  