.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__user-name
        = current_user.name
      .side-bar__header__box__menu
        =link_to = link_to new_group_path , class: "side-bar__header__box__menu__new-groups" do
          = icon('fas', 'edit', class: "groups__icon")
        =link_to edit_user_path(current_user), class: "side-bar__header__box__menu__edit-user" do
          = icon('fa', 'cog', class: "user__icon")

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        =link_to group_messages_path(group) do
          .side-bar__group-list__group__name
            = group.name
          .side-bar__group-list__group__messages 
            = group.show_last_message





     